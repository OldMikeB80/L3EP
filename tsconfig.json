{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@store/*": ["src/store/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@data/*": ["src/data/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
